<div class="flex flex-col w-full h-full items-center justify-start">
    <div class="flex flex-row w-5/6 justify-between items-center mt-7">
        <h1 class="text-start text-black text-3xl font-normal mr-auto">Categorias</h1>
        <a style="background-color: #8354D0;" class="px-10 py-3 w-64 text-center font-medium text-white rounded-lg" href="/category/create">Cadastrar</a>
    </div>
    <div class="flex flex-col w-5/6 items-center mt-5 h-5/6">
        <ul class="overflow-y-scroll max-h-full w-full">
            {{#each categoryList}}
                <li style="background-color: white;" class="flex flex-col items-start h-32 w-full mb-4 mt-4 rounded-lg p-3">
                    <p style="background-color: {{this.color}};" class="w-28 h-3 rounded-lg"></p>
                    <a class="mt-7 text-xl font-medium" href="/category/update/{{this.id}}"><i class="{{this.icon}}"></i> {{this.name}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>