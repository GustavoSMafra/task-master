<div class="list-container">
    <h1>Tarefas</h1>
    <div class="task-board">
        <div class="list-box">
            <h3>Criadas</h3>
            <ul>
                {{#each taskListCreated}}
                    <li>
                        {{!-- ALTERAR COR PARA COR DA CATEGORIA --}}
                        <p style="background-color: red;"></p>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Fazendo</h3>
            <ul>
                {{#each taskListWorking}}
                    <li>
                        {{!-- ALTERAR COR PARA COR DA CATEGORIA --}}
                        <p style="background-color: red;"></p>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Em espera</h3>
            <ul>
                {{#each taskListPaused}}
                    <li>
                        {{!-- ALTERAR COR PARA COR DA CATEGORIA --}}
                        <p style="background-color: red;"></p>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Finalizadas</h3>
            <ul>
                {{#each taskListDone}}
                    <li>
                        {{!-- ALTERAR COR PARA COR DA CATEGORIA --}}
                        <p style="background-color: red;"></p>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <a class="a-create" href="/task/create">Cadastrar</a>
    </div>

</div>