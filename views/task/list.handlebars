<div class="list-container">
    <h1>Tarefas</h1>
    <div class="task-board">
        <div class="list-box">
            <h3>Criadas</h3>
            <ul>
                {{#each taskListCreatedArray}}
                    <li>
                        <div class="task-category-label">
                            <i class="{{this.Category.categoryIcon}}"></i>
                            <p style="background-color: {{this.Category.categoryColor}}; margin: 0; margin-left: 10px;"></p>
                        </div>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Fazendo</h3>
            <ul>
                {{#each taskListWorkingArray}}
                    <li>
                        <div class="task-category-label">
                            <i class="{{this.Category.categoryIcon}}"></i>
                            <p style="background-color: {{this.Category.categoryColor}}; margin: 0; margin-left: 10px;"></p>
                        </div>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Em espera</h3>
            <ul>
                {{#each taskListPausedArray}}
                    <li>
                        <div class="task-category-label">
                            <i class="{{this.Category.categoryIcon}}"></i>
                            <p style="background-color: {{this.Category.categoryColor}}; margin: 0; margin-left: 10px;"></p>
                        </div>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="list-box">
            <h3>Finalizadas</h3>
            <ul>
                {{#each taskListDoneArray}}
                    <li>
                        <div class="task-category-label">
                            <i class="{{this.Category.categoryIcon}}"></i>
                            <p style="background-color: {{this.Category.categoryColor}}; margin: 0; margin-left: 10px;"></p>
                        </div>
                        <a href="/task/update/{{this.id}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <a class="a-create" href="/task/create">Cadastrar</a>
    </div>

</div>